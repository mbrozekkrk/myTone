
<html>
<head>
    {% block stylesheets %}
        {{ encore_entry_link_tags('app') }}
        {{ encore_entry_link_tags('offert-form') }}
        {#   {{ encore_entry_link_tags('home') }}#}

    {% endblock %}
    {% block javascripts %}
        {{ encore_entry_script_tags('app') }}
        {{ encore_entry_script_tags('skills_js') }}
    {% endblock %}
</head>
{% block body%}

    <div class="form-container">
        <div class="artist-form">
            <h1 id="try"> Let's try and apply!</h1>
            <!--<p data-toggle="tooltip" data-placement="left" title="Tooltip on left">Co≈õ tam</p>-->
            <p>Here are some tips to follow:</p>
            <ul>
                <li>Be concrete</li>
                <li>Give conditions on which you are prepared</li>
                <li>Be ready to perform </li>
                <li>Have fun!</li>
            </ul>
            {{ form_start(offertForm) }}
                {{ form_widget(offertForm) }}
            <b-button type="submit">Submit</b-button>
            {{ form_end(offertForm) }}
        </div>
        <div class="show-skills">
            <h1 v-if="skillsArray.length>0 ">Skills:</h1>
            <div v-if="skillsArray.length<=10" class="allSkills">
                <div  class="skill"  v-for="skill in skillsArray" :key="skills"  >
                    <button v-on:click="removeElement(skill)">X</button>
                    {{ "{{ skill }}" }}
                </div>
                <p v-if="skillsArray.length>=10"> Whoa! Surely will be enough :)</p>

            </div>
        </div>

        <div class="show-requirements">
            <h1 v-if="requirementsArray.length>0 ">Requirements:</h1>
            <div v-if="requirementsArray.length<=10" class="allSkills">
                <div  class="skill"  v-for="requirement in requirementsArray" :key="requirements"  >
                    <button v-on:click="removeElement(requirement)">X</button>
                    {{ "{{ requirement }}" }}
                </div>
                <p v-if="requirementsArray.length>=10"> Only 10 skills allowed</p>
            </div>
        </div>
    </div>
{%  endblock  %}
</html>